<h1>index</h1>
<!--user info/投稿フォーム-->
<div>
  <%= render 'user', user: @user, book: @book %>
</div>

<!--投稿一覧-->
<div>
  <h2>Books</h2>
  <table>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag book.user.get_profile_image(100,100) %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
    <% end %>
  </table>
</div>