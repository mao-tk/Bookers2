<div class="d-flex">
  <div class="container mt-3 mb-4">
    <%= render 'books/error', book: @book %>
    <div class="row">
      <!--user info/投稿フォーム-->
      <div class="col-md-3">
        <%= render 'user', user: @user, book: @book %>
      </div>

      <!--投稿一覧-->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th style="width: 20%"></th>
              <th></th>
              <th style="width: 30%">Title</th>
              <th style="width: 50%">Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr class="hover">
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td>
                <%= image_tag book.get_book_image(80,80) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>