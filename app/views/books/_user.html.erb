<!--user info-->
<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
</div>

<!--user setting-->
<div class="mt-5 mb-3">
  <%= link_to edit_user_path(user.id), class: "py-2 px-5 border border-secondary rounded text-secondary " do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <%= f.label :Title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
  <% end %>
</div>
