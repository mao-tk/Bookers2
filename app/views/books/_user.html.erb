<!--user info-->
<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
</div>

<!--user setting-->
<div>
  <%= link_to edit_user_path(current_user.id) do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <%= f.label "Title" %><br>
    <%= f.text_field :title %><br>
    <%= f.label "Opinion" %><br>
    <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
  <% end %>
</div>
