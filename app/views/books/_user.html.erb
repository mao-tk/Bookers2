<!--user info-->
<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table font-weight-bold ">
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
</div>

<!--user setting-->
<div class="mt-5 mb-3">
  <%= link_to edit_user_path(user.id), class: "btn btn-block border border-secondary rounded text-secondary" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <div class="form-group">
      <%= f.label :Title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :Opinion %>
      <%= f.text_area :body, class: "form-control"%>
    </div>
    <%= f.submit "Create Book", class: "btn bg-success text-light" %>
  <% end %>
</div>
