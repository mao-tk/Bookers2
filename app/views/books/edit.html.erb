<h1>Editing Book</h1>

<div>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>
  <%= f.label :Title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :Opinion %><br>
  <%= f.text_area :body %><br>
