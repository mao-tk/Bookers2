<div class="d-flex">
  <div class="container mt-3 mb-4">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/user', user: @user, book: @book %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table">
          <tr>
            <th style="width: 30%"></th>
            <th style="width: 35%">Title</th>
            <th style="width: 35%">Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>