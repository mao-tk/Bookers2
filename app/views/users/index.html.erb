<h1>Users#index</h1>

<%= render 'books/user', user: @user, book: @book %>

<h1>Users</h1>

  <table>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.get_profile_image(100,100) %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to "Show", user_path(user.id) %>
      </td>
    </tr>
    <% end %>
  </table>

  <!--確認用-->
<table border="1" >
  <tr>
    <th>user_id</th>
    <th>user_name</th>
    <th>title</th>
    <th>body</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
  <% end %>
  </tr>